-- 备份旧表（如果存在）
DROP TABLE IF EXISTS events_bak;
CREATE TABLE IF NOT EXISTS events_bak AS SELECT * FROM events;

-- 用正确结构重建
DROP TABLE IF EXISTS events;
CREATE TABLE events (
  id            INTEGER PRIMARY KEY AUTOINCREMENT,
  slug          TEXT NOT NULL UNIQUE,
  name          TEXT NOT NULL,
  location      TEXT,
  start_time    TEXT,
  poap_contract TEXT NOT NULL,
  created_at    TEXT NOT NULL DEFAULT (datetime('now'))
);

-- 尝试把能恢复的数据写回（旧表若无 slug，会用 name 派生一个）
INSERT INTO events (slug, name, location, start_time, poap_contract, created_at)
SELECT
  COALESCE(slug, lower(replace(name,' ','-'))),
  name,
  location,
  start_time,
  poap_contract,
  COALESCE(created_at, datetime('now'))
FROM events_bak
WHERE name IS NOT NULL AND poap_contract IS NOT NULL;

DROP TABLE IF EXISTS events_bak;
PRAGMA foreign_keys = ON;

CREATE INDEX IF NOT EXISTS idx_events_name ON events(name);